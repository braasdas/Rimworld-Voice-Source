# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/colonist_voices

# API Keys (for backend to use)
OPENAI_API_KEY=sk-proj-xxxxx
ELEVENLABS_API_KEY=sk_xxxxx  # This will be replaced by key pool

# Oxylabs Proxy Configuration (Optional - for residential proxies)
OXYLABS_USERNAME=your_oxylabs_username
OXYLABS_PASSWORD=your_oxylabs_password

# Discord Webhook for Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Server Configuration
USE_HTTPS=true
HTTPS_PORT=3443
PORT=3000
NODE_ENV=production

# Admin Authentication
ADMIN_PASSWORD=your_secure_admin_password_here

# Rate Limiting
RATE_LIMIT_PER_USER=100  # requests per hour
RATE_LIMIT_PER_IP=200    # requests per hour

# Free Tier Configuration
FREE_TIER_SPEECHES=10

# Session Secret (generate a random string)
SESSION_SECRET=your_random_secret_key_here
